<h1>List of the restaurants</h1>

<li>Adress: <%= @restaurant.address %></li>
<li>Phone number: <%= @restaurant.phone_number %></li>
<li>Category: <%= @restaurant.category %></li>

<div class="text-center">
  <div class="row">
    <div class= "col-4">
    <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category  %>
    <%= f.submit class: "btn btn-secondary" %>
    <% end %>
    </div>
</div>
</div>
<p><%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" }, :id => "open-contacts-dialog-btn", :class => "btn btn-outline-secondary" :method => :get %>
</p>
<li><%= button_to "Back To Home", restaurants_path, :id => "open-contacts-dialog-btn", :class => "btn btn-outline-secondary", :method => :get %></li>

